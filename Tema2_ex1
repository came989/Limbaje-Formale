def generate_palindromes(length):
    alphabet = ['0', '1', '2']
    palindromes = []

    def backtrack(current_palindrome):
        if len(current_palindrome) == length:
            palindromes.append(current_palindrome)
            return

        for digit in alphabet:
            new_palindrome = current_palindrome + digit
            if new_palindrome == new_palindrome[::-1]:
                backtrack(new_palindrome)

    backtrack('')
    return palindromes

for length in range(1, 6):
    print(f"Palindroame de lungime {length}:")
    palindromes = generate_palindromes(length)
    for palindrome in palindromes:
        print(palindrome)
    print()
