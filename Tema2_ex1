#include <iostream>
#include <string>

using namespace std;

int main() {
    string alfabet = "012";

    // Generarea și afișarea palindroamelor pentru fiecare lungime
    for (int lungime = 1; lungime <= 5; ++lungime) {
        cout << "Palindroame de lungime " << lungime << ":" << endl;
        for (int i = 0; i < alfabet.size(); ++i) {
            if (lungime == 1) {
                cout << alfabet[i] << endl;
            } else {
                for (int j = 0; j < alfabet.size(); ++j) {
                    cout << alfabet[i] << alfabet[j] << alfabet[i] << endl;
                }
            }
        }
        cout << endl;
    }

    return 0;
}
