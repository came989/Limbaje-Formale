#include <iostream>
#include <string>

using namespace std;

int main() {
    cout << "Gramatica 1:" << endl;
    
    int lungime_maxima = 10; // putem seta orice lungime dorim

    for (int i = 0; i <= lungime_maxima; ++i) {
        string s;
        for (int j = 0; j < i; ++j) {
            s += 'a';
        }
        for (int j = 0; j < i; ++j) {
            s += 'b';
        }
        cout << s << endl;
    }

    return 0;
}

b)
#include <iostream>
#include <string>

using namespace std;

int main() {
    cout << "Gramatica 2:" << endl;
    
    int lungime_maxima = 10; // putem seta orice lungime dorim

    for (int i = 0; i <= lungime_maxima; ++i) {
        string s;
        for (int j = 0; j < i; ++j) {
            s += '0';
        }
        for (int j = 0; j < i; ++j) {
            s += '1';
        }
        for (int j = 0; j < i; ++j) {
            s += '2';
        }
        for (int j = 0; j < i; ++j) {
            s += '3';
        }
        for (int j = 0; j < i; ++j) {
            s += '4';
        }
        cout << s << endl;
    }

    return 0;
}
